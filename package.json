{
  "name": "aesr-s3-config-sender",
  "version": "0.2.13",
  "description": "AWS Extend Switch Roles config sender",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "webpack --config webpack.config.js",
    "build:dev": "NODE_ENV=development webpack --mode development",
    "build:prod": "NODE_ENV=production webpack --mode production",
    "build:chrome": "npm run build:prod && npm run update-credits && npm run package:chrome",
    "build:firefox": "npm run build:prod && npm run update-credits && npm run package:firefox",
    "package:chrome": "cd dist/extension && cp ../../src/manifest/manifest-chrome.json manifest.json && zip -r ../aesr-s3-config-sender-chrome.zip *",
    "package:firefox": "cd dist/extension && cp ../../src/manifest/manifest-firefox.json manifest.json && zip -r ../aesr-s3-config-sender-firefox.zip *",
    "type-check": "tsc --noEmit",
    "update-credits": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/scripts/updateCredits.ts",
    "watch": "NODE_ENV=development webpack --watch",
    "dev": "NODE_ENV=development webpack --mode development",
    "prod": "NODE_ENV=production webpack --mode production",
    "start:chrome": "npm run build:dev && NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/scripts/launchDev.ts chrome",
    "start:firefox": "npm run build:dev && NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/scripts/launchDev.ts firefox"
  },
  "author": "Bradley Duncan",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.454.0",
    "@aws-sdk/client-sts": "^3.454.0",
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@popperjs/core": "^2.11.7",
    "bootstrap": "^5.3.0-alpha3",
    "fast-xml-parser": "^4.3.2",
    "jquery": "^3.6.4"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "@types/chrome": "^0.0.254",
    "@types/jquery": "^3.5.29",
    "@types/node": "^20.10.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "glob": "^10.3.10",
    "install": "^0.13.0",
    "license-checker": "^25.0.1",
    "mini-css-extract-plugin": "^2.7.5",
    "npm": "^10.2.4",
    "purgecss-webpack-plugin": "^5.0.0",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.0.2",
    "webpack-dev-server": "^4.13.3"
  }
}
