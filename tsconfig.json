{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["DOM", "ES2022"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "scripts"]
}
